# NSEC Cache Datastore Demo Configuration
# ----------------------------------------
# Copy this file to .env before running: cp env.example .env

# DNS Zone name (must end with dot for FQDN)
ZONE_NAME=zone.test

# TTL for records in seconds (keep small for fast iteration)
TTL=60

# Message to encode in the NSEC chain
MESSAGE=hello from nsec cache datastore

# Chunk size in bytes before base32 encoding
# Smaller chunks = more nodes = longer chain
CHUNK_SIZE=8
